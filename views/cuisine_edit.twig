<html>
    <head>
        <title>Edit Page</title>
    </head>
    <body>
        <h1>Update the {{ cuisine.getType }} cuisine</h1>

        <form action="/cuisine/{{ cuisine.getId }}" method='post'>
            <input name='_method' type='hidden' value='patch'>

            <label for='type'>Rename your cuisine:</label>
            <input id='type' name='type' type='text'>

            <button type='submit'>Update</button>
        </form>
    </body>
</html>
